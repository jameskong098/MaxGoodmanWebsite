<head>
    <title>Max Goodman's Website</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>
  
<body> 
    <options>
        <div class="backButton" id="button-2">
            <div id="slide"></div>
            <a href="/index">Back</a><br><br>
        </div>
    </options>
    <optionsButNoBack>
        <h1 style="font-size:60px; text-decoration: underline; width: 550px; text-align:center">Films</h1>
    </optionsButNoBack>
    <% if (loggedIn) { %>
        <options>
            <% if (filmsLength == 1) { %>
                <text style="padding:20px; width:900px; text-align:center">Welcome Max, you have <%= filmsLength %> film.</text>
            <% } 
            else { %>
                <text style="padding:20px">Welcome Max, you have <%= filmsLength %> films.</text>
            <% } %>
            <form method="post" action="/films/addFilm" style="display: flex; flex-direction:column; text-align: center;">
                <text style="margin-bottom:15px">Embedded video href Link:</text>
                <input type="text" name="hrefLink" style="width: 500px; margin:auto" required >
                <% if (invalidURL) { %>
                    <a style="font-size:15px; margin-top:25px">Invalid URL. Try Again!</a>
                <% } %>
                <text style="margin-top:15px; margin-bottom:15px">Description:</text>
                <textarea style="resize: none; margin-top:15px" name="description" rows="20" cols="80" maxlength="4000" required></textarea>
                <input type="submit" value="Submit Post" style="max-width: 150px; margin:auto; margin-top:30px">
            </form>  
        </options><br><br>
    <% } %>
    <% for (film of films){%>
        <options style="width:1100px; resize: none">
            <iframe title="vimeo-player" src="<%= film.hrefLink%>" width="640" height="360" frameborder="0" allowfullscreen></iframe>
            <text style="font-size:20px; margin-top:20px;margin-bottom:15px; word-wrap: break-word; max-width:1025px;"><%= film.description %></text>
            <% if (loggedIn) { %>
                <a href="/films/delete/<%= film._id%>" style="color:red">(Delete)</a>
            <% } %>
        </options><br><br>
    <% }%>
</body>
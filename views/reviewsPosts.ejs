<head>
    <title>Max Goodman's Website</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body> 
    <options>
        <div class="button" id="button-2">
            <div id="slide"></div>
            <a href="/index">Back</a><br><br>
        </div>
    </options>
    <optionsButNoBack>
        <h1 style="font-size:60px; text-decoration: underline; max-width:550px; min-width:550px; resize: none">Reviews & Posts</h1>
    </optionsButNoBack>
    <% if (loggedIn) { %>
        <options>
            
                <% if (postsLength == 1) { %>
                    <text style="padding:20px; max-width:700px; min-width:700px; resize: none">Welcome Max, you have <%= postsLength %> post.</text>
                <% } 
                else { %>
                    <text style="padding:20px">Welcome Max, you have <%= postsLength %> posts.</text>
                <% } %>
                <form method="post" action="/reviewPost/addReviewPost" style="display: flex; flex-direction:column; text-align: center; padding:15px;">
                    <div style="display:flex; flex-direction:row; margin:auto;">
                        <text>Title:</text>
                        <input type="text" name="title" style="max-width: 150px; margin:auto" required >
                    </div>
                    <div style="display:flex; flex-direction:row; margin:auto; margin:auto; padding:15px">
                        <text>Rating 1-5:</text>
                        <input type="number" name="rating" min=1 max = 5 style="margin:auto" required>
                    </div>
                    <text>Description:</text>
                    <textarea style="resize: none; margin-top:15px" name="description" rows="20" cols="80" maxlength="5490" required></textarea>
                    <input type="submit" value="Submit Post" style="max-width: 150px; margin:auto; margin-top:30px">
                </form>
            
        </options><br><br>
    <% } %>
    <% for (post of posts){%>
        <options style="max-width:1100px; min-width:1100px; resize: none">
            <i style="text-decoration:underline; font-size:50px; margin-top:15px"><%= post.title%></i>
            <div style="display:flex; flex-direction:row; margin:auto; margin:auto; padding:15px">
                <text>Rating (1-5):</text><%= post.rating%>
            </div>
            <i style="font-size:20px; margin-bottom:15px; margin-left: 30px; margin-right: 30px"><%= post.description %></i>
            <text style="text-align: center"><%= post.createdAt %></text>
            <% if (loggedIn) { %>
                <a href="/reviewPost/delete/<%= post._id%>" style="color:red">(Delete)</a>
            <% } %>
        </options><br><br>
    <% }%>
</body>
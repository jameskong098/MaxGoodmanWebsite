<head>
    <title>Max Goodman's Website</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <options>
        <div class="button" id="button-2">
            <div id="slide"></div>
            <a href="/index">Back</a>
        </div>
    </options><br><br><br><br>
    <options style="font-size:25px; text-align:center; padding:15px">
        <text style="font-size:300%; text-decoration:underline">Admin Login</text>
        <form class="bg-light" method="post" action="/login"><br>
            <text style="font-size:150%">Username: </text>
            <input type="text"
                autocomplete="username"
                name="username"
                required>
                <br><br>
            <text style="font-size:150%">Password: </text>
            <input type="password"
                autocomplete="passphrase"
                name="passphrase"
                required><br><br>
            <% if (incorrect) {%>
                <a style="font-size:15px; color:red">Username or password is incorrect. Try again!</a>
            <% } %>
            <br><br><input type="submit">
            <br>
        </form>
    </options>
</body>



